{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "outDir": "./lib",
  },
  "exclude": [
    "**/*.spec.ts"
  ],
  "include": [
    "src/index.ts"
  ],
}
